{
    "name": "compwright/swoole-psr7-compat",
    "authors": [
        {
            "name": "Jonathon Hill",
            "email": "jonathon@compwright.com"
        }
    ],
    "license": "MIT",
    "require": {
        "ext-swoole": "*",
        "mezzio/mezzio-swoole": "^3.3",
        "nyholm/psr7-server": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^2.6",
        "nyholm/psr7": "^1.4",
        "phpunit/phpunit": "^9.4",
        "psalm/plugin-phpunit": "^0.16.1",
        "slim/psr7": "^1.4",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Compwright\\SwoolePsr7Compat\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Compwright\\SwoolePsr7Compat\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "phpcbf -q --standard=PSR12 src tests || true",
            "phpcs --standard=PSR12 -s src tests"
        ],
        "test": "phpunit"
    }
}
